                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/servicesPoint3"
                    android:textColor="?attr/mainText" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/servicesPoint4"
                    android:textColor="?attr/mainText" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/servicesPoint5"
                    android:textColor="?attr/mainText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:text="@string/securityTitle"
                    android:textColor="?attr/mainText"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/securityBlurb"
                    android:textColor="?attr/mainText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:text="@string/linksTitle"
                    android:textColor="?attr/mainText"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/linksBlurb"
                    android:textColor="?attr/mainText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:text="@string/changesPolicyTitle"
                    android:textColor="?attr/mainText"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/changesPolicyBlurb"
                    android:textColor="?attr/mainText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:text="@string/contactUsTitle"
                    android:textColor="?attr/mainText"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:text="@string/contactUsBlurb"
                    android:textColor="?attr/mainText" />


            </LinearLayout>
        </ScrollView>



    </FrameLayout>


</RelativeLayout>