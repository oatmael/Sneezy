    <!--LIGHT-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/lightBackground</item>
        <item name="colorPrimaryDark">@color/sectionWhite</item>
        <item name="colorAccent">@color/lightMainText</item>
        <item name="backgroundMainColor">@color/lightBackground</item>
        <item name="mainText">@color/lightMainText</item>
        <item name="sectionColor">@color/sectionWhite</item>
        <item name="buttonMain">@color/lightButtonMain</item>
        <item name="plusMinusColor">@color/lightPlusMinusButton</item>
        <item name="changeLocButton">@color/lightChangeLocButton</item>
        <item name="sneezeAndTimesText">@color/sneezeAndTimesLight</item>
        <item name="timesBubble">@color/timesBubbleLight</item>
        <item name="toolbarColor">@color/black</item>
        <item name="changeLocText">@color/lightMainText</item>
    </style>

    <!--DARK THEME-->
    <style name="darkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/darkBackground</item>
        <item name="colorPrimaryDark">@color/sectionDark</item>
        <item name="colorAccent">@color/mainGreyText</item>
        <item name="backgroundMainColor">@color/darkBackground</item>
        <item name="mainText">@color/mainGreyText</item>
        <item name="sectionColor">@color/sectionDark</item>
        <item name="buttonMain">@color/darkButtonMain</item>
        <item name="plusMinusColor">@color/plusMinusButtonDark</item>
        <item name="changeLocButton">@color/changeLocButtonDark</item>
        <item name="sneezeAndTimesText">@color/sneezeAndTimesDark</item>
        <item name="timesBubble">@color/timesBubbleDark</item>
        <item name="toolbarColor">@color/sectionDark</item>
        <item name="changeLocText">@color/changeLocTextDark</item>
    </style>

    <!--Alert Dialog theme-->
    <style name="AlertDialogCustom" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:textColorPrimary">?attr/mainText</item>
        <item name="android:textColorSecondary">?attr/mainText</item>
        <item name="android:headerDividersEnabled">true</item>
        <item name="android:typeface">normal</item>
        <item name="android:background">?attr/backgroundMainColor</item>
    </style>




