<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/backgroundMainColor">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

                <Button
                    android:id="@+id/previous_month_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="previous"
                    android:textColor="?attr/changeLocText"
                    android:backgroundTint="?attr/changeLocButton"
                    android:layout_gravity="left"/>

                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                        <TextView
                            android:id="@+id/current_month_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="MonthSelectText"
                            android:textColor="?attr/mainText"
                            android:textAlignment="center"/>


                </LinearLayout>

                <Button
                    android:id="@+id/next_month_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="next"
                    android:textColor="?attr/changeLocText"
                    android:backgroundTint="?attr/changeLocButton"/>

        </LinearLayout>


        <com.anychart.AnyChartView
            android:id="@+id/any_chart_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/backgroundMainColor"
            />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

</LinearLayout>
