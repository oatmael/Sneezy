<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/backGrey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/homeLinearLayout">

        <FrameLayout
            android:id="@+id/topSectionLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:id="@+id/topSectionImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/purp_section_forcast"/>

            <!--TEXT LAYOUT START-->
            <LinearLayout
                android:layout_width="270dp"
                android:layout_height="250dp"
                android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/forecastFor"
                android:text="@string/pollenCountTitle"
                android:textColor="@color/textPurp"
                android:layout_gravity="top|start"
                android:paddingStart="15dp"
                android:paddingTop="15dp"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pollenCountLocationTxt"
                android:text="@string/pollenLocationText"
                android:textColor="@color/textPurp"
                android:layout_gravity="top|start"
                android:paddingStart="15dp"
                android:paddingTop="0dp"
                android:textStyle="bold"
                android:textSize="32sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/locationIncorrectText"
                android:text="@string/pollenLocationIncorrect"
                android:textColor="@color/textPurp"
                android:layout_gravity="top|start"
                android:paddingStart="15dp"
                android:paddingTop="0dp"
                android:textStyle="bold"
                android:textSize="17sp"/>

            <Button
                android:layout_width="136dp"
                android:layout_height="25dp"
                android:background="@drawable/change_loc_button"
                android:id="@+id/changeLocation"
                android:text="@string/pollenChangeLocation"
                android:textColor="@color/changeLocPurp"
                android:layout_gravity="top|start"
                android:layout_marginTop="0dp"
                android:layout_marginStart="12dp"
                android:minHeight="35dp"
                android:textStyle="normal"
                android:fontFamily="@font/arial"
                android:textSize="13sp"
                android:textAllCaps="false" />

            </LinearLayout>
            <!--FORCAST TEXT END-->


            <!--INDEX START-->
            <LinearLayout
                android:id="@+id/indexLayout"
                android:layout_width="58dp"
                android:layout_height="115dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="top|end"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/indexTextView"
                    android:layout_width="45dp"
                    android:layout_height="21dp"
                    android:text="@string/indexText"
                    android:textColor="@color/textPurp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="top|center"/>


                <RelativeLayout
                    android:layout_width="58dp"
                    android:layout_height="31dp">

                    <ImageView
                        android:id="@+id/indexImageRed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/index_block_red" />

                    <TextView
                        android:id="@+id/indexHigh"
                        android:layout_width="45dp"
                        android:layout_height="23dp"
                        android:text="@string/pollenCountHigh"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:textStyle="bold"
                        android:textColor="@color/indexBlocksTextColor"
                        android:textSize="18sp"/>

                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="58dp"
                    android:layout_height="31dp">

                    <ImageView
                        android:id="@+id/indexImageOrange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/index_block_orange"/>

                    <TextView
                        android:layout_width="45dp"
                        android:layout_height="23dp"
                        android:id="@+id/indexMed"
                        android:text="@string/pollenCountMed"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:textStyle="bold"
                        android:textColor="@color/indexBlocksTextColor"
                        android:textSize="18sp"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="58dp"
                    android:layout_height="31dp">

                    <ImageView
                        android:id="@+id/indexImageGreen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/index_block_green"/>

                    <TextView
                        android:layout_width="45dp"
                        android:layout_height="23dp"
                        android:id="@+id/indexLow"
                        android:text="@string/pollenCountLow"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:textStyle="bold"
                        android:textColor="@color/indexBlocksTextColor"
                        android:textSize="18sp"
                        />
                </RelativeLayout>
            </LinearLayout>
            <!--INDEX END-->



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/weekAheadText"
                android:text="@string/weekAhead"
                android:textColor="@color/textPurp"
                android:layout_gravity="bottom|start"
                android:paddingStart="15dp"
                android:paddingBottom="150dp"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <!--START FORCAST-->
            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="57dp"
                android:orientation="horizontal"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="90dp">

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="57dp">

                    <ImageView
                        android:id="@+id/forecastImageOne"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/forecast_block_orange" />

                    <TextView
                        android:id="@+id/forecastTextBlockOne"
                        android:layout_width="45dp"
                        android:layout_height="23dp"
                        android:text="@string/homeMonday"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:textStyle="bold"
                        android:textColor="@color/indexBlocksTextColor"
                        android:textSize="18sp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="57dp">

                    <ImageView
                        android:id="@+id/forecastImageTwo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/forecast_block_red" />

                    <TextView
                        android:id="@+id/forecastTextBlockTwo"
                        android:layout_width="45dp"
                        android:layout_height="23dp"
                        android:text="@string/homeTuesday"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:textStyle="bold"
                        android:textColor="@color/indexBlocksTextColor"
                        android:textSize="18sp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="57dp">

                    <ImageView
                        android:id="@+id/forecastImageThree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/forecast_block_green" />

                    <TextView
                        android:id="@+id/forecastTextBlockThree"
                        android:layout_width="45dp"
                        android:layout_height="23dp"
                        android:text="@string/homeWednsday"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:textStyle="bold"
                        android:textColor="@color/indexBlocksTextColor"
                        android:textSize="18sp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="57dp">

                    <ImageView
                        android:id="@+id/forecastImageFour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/forecast_block_red" />

                    <TextView
                        android:id="@+id/forecastTextBlockFour"
                        android:layout_width="45dp"
                        android:layout_height="23dp"
                        android:text="@string/homeThursday"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:textStyle="bold"
                        android:textColor="@color/indexBlocksTextColor"
                        android:textSize="18sp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="57dp">

                    <ImageView
                        android:id="@+id/forecastImageFive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/forecast_block_orange" />

                    <TextView
                        android:id="@+id/forecastTextBlockFive"
                        android:layout_width="45dp"
                        android:layout_height="23dp"
                        android:text="@string/homeFriday"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:textStyle="bold"
                        android:textColor="@color/indexBlocksTextColor"
                        android:textSize="18sp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="57dp">

                    <ImageView
                        android:id="@+id/forecastImageSix"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/forecast_block_red" />

                    <TextView
                        android:id="@+id/forecastTextBlockSix"
                        android:layout_width="45dp"
                        android:layout_height="23dp"
                        android:text="@string/homeSaturday"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:textStyle="bold"
                        android:textColor="@color/indexBlocksTextColor"
                        android:textSize="18sp"/>

                </RelativeLayout>

            </LinearLayout>
            <!--END FORCAST-->




        </FrameLayout>

        <!--START OF GRAPHS AREA-->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bottomSection"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bottomSectionImage"
                android:background="@drawable/purp_section_homegraph"/>

<!--USE LINEAR LAYOUT BELOW TO ADD YOUR GRAPHS IN, SHOULD STAY WITHIN THE ALLOCATED PURPLE BOX-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/homeGraphs"
                android:orientation="vertical">

            </LinearLayout>

        </FrameLayout>
        <!--END OF GRAPHS-->

<!--START OF BUTTONS-->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSection">



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonBackingImage"
            android:background="@drawable/button_backing"/>

        <!--Sneeze Button-->
        <Button
            android:layout_width="390dp"
            android:layout_height="80dp"
            android:background="@drawable/sneeze_button"
            android:id="@+id/sneezeButton"
            android:text=""
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="0dp"
            android:layout_marginStart="10dp"
            android:minHeight="35dp"
            android:textStyle="normal"
            android:fontFamily="@font/arial"
            android:textSize="30sp"
            android:textAllCaps="true"/>

        <TextView
            android:id="@+id/sneezeButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/arial"
            android:text="@string/sneeze"
            android:textColor="@color/whiteBacking"
            android:textSize="30sp"
            android:translationZ="90dp"/>




        <!--Plus Button-->
        <Button
            android:layout_width="119dp"
            android:layout_height="80dp"
            android:background="@drawable/plus_button"
            android:id="@+id/plusButton"
            android:text=""
            android:textColor="@color/plusMinusGrey"
            android:layout_gravity="center_vertical|right"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="10dp"
            android:minHeight="35dp"
            android:textStyle="normal"
            android:fontFamily="@font/arial"
            android:textSize="80sp"
            android:textAllCaps="true"/>

        <TextView
            android:id="@+id/plusButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="50dp"
            android:fontFamily="@font/arial"
            android:text="@string/plus"
            android:textColor="@color/whiteBacking"
            android:textSize="70sp"
            android:translationZ="90dp"/>

        <!--Minus Button-->
        <Button
            android:layout_width="119dp"
            android:layout_height="80dp"
            android:background="@drawable/minus_button"
            android:id="@+id/minusButton"
            android:text=""
            android:textColor="@color/plusMinusGrey"
            android:layout_gravity="center_vertical|left"
            android:layout_marginTop="0dp"
            android:layout_marginStart="10dp"
            android:minHeight="35dp"
            android:textStyle="normal"
            android:fontFamily="@font/arial"
            android:textSize="80sp"
            android:textAllCaps="true"/>

        <TextView
            android:id="@+id/minusButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginTop="0dp"
            android:layout_marginStart="60dp"
            android:fontFamily="@font/arial"
            android:text="@string/minus"
            android:textColor="@color/whiteBacking"
            android:textSize="70sp"
            android:translationZ="90dp"/>

        <!--Change Sneeze Times Button-->
        <Button
            android:layout_width="61dp"
            android:layout_height="44dp"
            android:background="@drawable/button_times"
            android:id="@+id/timesButton"
            android:text="1X"
            android:textColor="@color/whiteBacking"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="10dp"
            android:minHeight="35dp"
            android:textStyle="normal"
            android:fontFamily="@font/arial"
            android:textSize="30sp"
            android:textAllCaps="true"/>













    </FrameLayout>
        <!--END OF BUTTONS-->


    </LinearLayout>

</RelativeLayout>